<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="favico.png" type="image/x-icon">
    <link rel="stylesheet" href="css/normalize.css">
    <link rel="stylesheet" href="css/main.css">
    <link rel="stylesheet" href="css/marvel-style.css">
    <script src="js/modernizr-2.6.2.min.js"></script>
    <script src="js/jquery-1.9.1.min.js"></script>

    <link href="css/bootstrap.min.css" rel="stylesheet">
    <script src="js/bootstrap.bundle.min.js"></script>
</head>

<body style="background-color:rgb(190,15,4);">

	<header>
		<div class="inner">
			<div class="logo"><img src="../Marvel-Logo.jpg"></div>
			<div class="burger"></div>
			<nav>
				<a class="active" href="#">Marvel</a>
				<a href="#">Characters</a>
				<a href="#">Comics</a>
				<a href="#">About</a>
			</nav>
			<a href="#" class="donate-link">Donate</a>
		</div>
	</header>


    <div class="demo" id="loader-wrapper">
        <div id="loader">
            <img src="marvel.gif" style="width: 100rem; height:100 rem;" class="card-img-top" alt="...">
        </div>
        <div class="loader-section section-left"></div>
        <div class="loader-section section-right"></div>
    </div>

    <div class="container">
        <div class="row">
            <% jsonValue.forEach(function(jsonValue) { %>
                <div class="col-md-3">
                    <div class="card" style="width: 18rem;">
                        <img  class="card-img-top"  style="height: 18rem; width: 18rem; " src="<%= jsonValue.thumbnail.path %>/portrait_incredible.jpg">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= jsonValue.name %>
                            </h5>                            
                            <a href="<%= jsonValue.resourceURI %>" class="btn btn-danger">More details</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="js/main.js"></script>
</body>


</html>